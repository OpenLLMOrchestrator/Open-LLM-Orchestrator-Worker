# ---------------------------------------------------------------------------
# Open LLM Orchestrator Worker – environment variables
# Copy to .env and set values. Used by docker-compose and local runs.
# ---------------------------------------------------------------------------

# Temporal (override config when set)
TEMPORAL_TARGET=localhost:7233
TEMPORAL_NAMESPACE=default

# Worker task queue (overrides config in production)
QUEUE_NAME=core-task-queue

# Config loading (order: Redis → DB → file)
# CONFIG_KEY selects which config to load: Redis key olo:engine:config:<CONFIG_KEY>:<version>, file config/<CONFIG_KEY>.json
CONFIG_KEY=default
CONFIG_VERSION=1.0
# Optional: override file path; if unset, uses config/<CONFIG_KEY>.json (multiple files possible, e.g. config/default.json, config/production.json)
# CONFIG_FILE_PATH=config/default.json
CONFIG_RETRY_SLEEP_SECONDS=30

# Redis (config storage / cache; overrides config in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database (config storage; overrides config in production)
DB_URL=jdbc:postgresql://localhost:5432/olo_config
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Worker tuning
MAX_CONCURRENT_WORKFLOW_TASK_POLLERS=5
MAX_CONCURRENT_ACTIVITY_TASK_POLLERS=10

# Ollama (used by Llama32ModelPlugin for question-answer pipeline)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
